<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detail_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:id="@+id/detail_title_action_box"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/md_white_1000"
        android:elevation="2dp">

        <FrameLayout
            android:id="@+id/detail_title_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_frame_height">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal">

                <!-- Title Border -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/title_row"/>

            </FrameLayout>

            <!-- Doa Title -->
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_vertical"
                android:text="title"/>

        </FrameLayout>

        <!-- Buttons -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/detail_title_frame"
            android:foregroundGravity="center_horizontal|center">

            <LinearLayout
                android:id="@+id/detail_buttons_frame"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <!-- Left Navigation Icon -->
                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/detail_left_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="50dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    app:iiv_color="@color/colorDetailIconEnabled"
                    app:iiv_icon="gmd-skip-previous"/>


                <!-- Font Size Icon -->
                <FrameLayout
                    android:id="@+id/img_font_size"
                    android:layout_width="@dimen/icon_frame_size"
                    android:layout_height="@dimen/icon_frame_size"
                    android:layout_margin="2dp"
                    android:background="@color/md_white_1000"
                    android:clickable="true"
                    android:elevation="2dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center|center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        app:iiv_color="@color/md_grey_600"
                        app:iiv_icon="gmd-format-size"/>

                </FrameLayout>

                <!-- Line Spacing Icon -->
                <FrameLayout
                    android:id="@+id/img_line_spacing"
                    android:layout_width="@dimen/icon_frame_size"
                    android:layout_height="@dimen/icon_frame_size"
                    android:layout_margin="2dp"
                    android:background="@color/md_white_1000"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:padding="2dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/img_line_spacing_icon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center|center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        app:iiv_color="@color/md_grey_600"
                        app:iiv_icon="gmd-format-line-spacing"/>

                </FrameLayout>

                <!-- Line Spacing Icon -->
                <FrameLayout
                    android:id="@+id/img_font_type"
                    android:layout_width="@dimen/icon_frame_size"
                    android:layout_height="@dimen/icon_frame_size"
                    android:layout_margin="2dp"
                    android:background="@color/md_white_1000"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:padding="2dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/img_font_type_icon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center|center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        app:iiv_color="@color/md_grey_600"
                        app:iiv_icon="faw-font"/>

                </FrameLayout>

                <!-- Translate Icon -->
                <FrameLayout
                    android:id="@+id/img_translate"
                    android:layout_width="@dimen/icon_frame_size"
                    android:layout_height="@dimen/icon_frame_size"
                    android:layout_margin="2dp"
                    android:background="@color/md_white_1000"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:padding="2dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/img_translate_icon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center|center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        app:iiv_color="@color/colorTranslationDisabled"
                        app:iiv_icon="faw-language"/>

                </FrameLayout>

                <!-- Right Navigation Icon -->


                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/detail_right_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="50dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    app:iiv_color="@color/colorDetailIconEnabled"
                    app:iiv_icon="gmd-skip-next"/>


            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/detail_title_action_box">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Arabic Doa Fragment Container -->
                    <FrameLayout
                        android:id="@+id/fragment_detail_doa"
                        android:name="com.mfadli.doapilihan.DetailDoaFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Reference Fragment Container -->
                    <FrameLayout
                        android:id="@+id/fragment_detail_reference"
                        android:name="com.mfadli.doapilihan.DetailReferenceFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fragment_detail_doa"/>

                    <!-- Translation Fragment Container -->
                    <FrameLayout
                        android:id="@+id/fragment_detail_translation"
                        android:name="com.mfadli.doapilihan.DetailTranslationFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fragment_detail_reference"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

