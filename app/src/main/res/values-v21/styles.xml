<resources>>

    <!-- Dark Theme -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="themedLayoutColorStyle">@color/md_grey_800</item>
        <item name="themedTextColorStyle">@color/md_grey_300</item>
        <item name="themedDoaColorStyle">@color/md_white_1000</item>
        <item name="themedPatternColorStyle">@color/md_amber_50</item>
        <item name="themedPatternDialogTextColorStyle">@color/md_green_A400</item>

        <!-- Menu -->
        <item name="android:itemTextAppearance">@style/ActionBarTitle</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme.NoActionBar.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="themedLayoutColorStyle">@color/md_white_1000</item>
        <item name="themedTextColorStyle">@color/md_grey_800</item>
        <item name="themedDoaColorStyle">@color/md_grey_800</item>
        <item name="themedPatternColorStyle">@color/colorPattern</item>
        <item name="themedPatternDialogTextColorStyle">@color/colorPrimaryDark</item>

        <!-- Menu -->
        <item name="android:itemTextAppearance">@style/ActionBarTitle</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>

    <style name="ActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:divider">@color/colorPrimaryDark</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- This will set the fade in animation on all activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

</resources>
